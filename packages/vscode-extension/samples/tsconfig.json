{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"experimentalDecorators": true,
		"lib": [
			"es6"
		],
		"resolveJsonModule": true,
		"sourceMap": true,
		"rootDir": ".",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react",
		"strict": true
	},
	"exclude": [
		"../node_modules"
	]
}
