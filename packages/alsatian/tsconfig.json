{
   "extends": "./tsconfig.base.json",
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "sourceMap": true,
      "preserveConstEnums": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": [ "es2015" ],
      "jsx": "react",
      "jsxFactory": "h"
   },
   "buildOnSave": false,
   "compileOnSave": true,
   "exclude": [
      "./core/**/*.d.ts",
      "./cli/**/*.d.ts",
      "./test/**/*.d.ts",
      "./test/integration-tests",
      "./scripts/**/*.d.ts",
      "node_modules"
   ],
   "include": [
      "./cli/**/*.ts",
      "./core/**/*.ts",
      "./test/**/*.ts",
      "./scripts/**/*.ts", "tap-bark/src/tap-bark.tsx"
   ],
   "atom": {
      "rewriteTsconfig": false
   }
}
