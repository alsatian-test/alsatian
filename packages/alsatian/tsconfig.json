{
   "extends": "./tsconfig.base.json",
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "sourceMap": true,
      "preserveConstEnums": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": [ "es2015" ],
      "outDir": "./dist"
   },
   "buildOnSave": false,
   "compileOnSave": true,
   "exclude": [
      "./test/integration-tests",
      "../tap-bark/**/*.ts",
      "../tap-bark/**/*.tsx",
      "node_modules"
   ],
   "include": [
      "./cli/**/*.ts",
      "./core/**/*.ts",
      "./test/**/*.ts",
      "./scripts/**/*.ts"
   ],
   "atom": {
      "rewriteTsconfig": false
   }
}
