{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [ "es2015" ]
    },
    "buildOnSave": false,
    "compileOnSave": true,
    "exclude": [
        "./**/*.d.ts",
        "../../core/**/*.ts"
    ],
    "filesGlob": [
        "./**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
