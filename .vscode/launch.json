    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Gulp",
            "type": "node2",
            "request": "launch",
            "program": "${workspaceRoot}\\cli\\alsatian-cli.js",
            "cwd": "${workspaceRoot}",
            "args": ["./test/integration-tests/gulp/runner"],
            "outFiles": [],
            "sourceMaps": true
        },
        {
            "name": "Debug Unit Tests",
            "type": "node2",
            "request": "launch",
            "program": "${workspaceRoot}\\cli\\alsatian-cli.js",
            "cwd": "${workspaceRoot}",
            "args": ["./test/unit-tests/**/*.spec.js"],
            "outFiles": [],
            "sourceMaps": true
        },
        {
            "name": "Launch Program",
            "type": "node2",
            "request": "launch",
            "program": "${workspaceRoot}\\core\\alsatian-core.js",
            "cwd": "${workspaceRoot}",
            "outFiles": [],
            "sourceMaps": true
        },
        {
            "name": "Attach to Process",
            "type": "node2",
            "request": "attach",
            "port": 9229,
            "outFiles": [],
            "sourceMaps": true
        }
    ]
}